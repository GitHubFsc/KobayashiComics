/* pages/my/index.wxss */
.container{
  width: 100%;
  height: 100%;
}
.user{
  width: 710rpx;
  height: 320rpx;
  padding: 0 20rpx;
}
.user_top{
  width: 100%;
  height: 168rpx;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}
.user_top .user_img{
  width: 88rpx;
  height: 88rpx;
  margin-top: 40rpx;
  margin-right: 20rpx;
}
.user_right{
  width: 500rpx;
  margin-top: 42rpx;
}
.user_right .user_name{
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
} 
.user_right .user_name text{
  display: inline-block;
  padding: 4rpx;
  background:rgba(255,199,80,1);
  border-radius:10rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 15rpx;
}
.user_signature{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  margin-top: 20rpx;
}
.user_bot{
  width: 100%;
  height: 150rpx;
  display: flex;
  padding: 26rpx 0 37rpx 0;
}
.user_coupon,.user_integral{
  width: 20%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
}
.user_other{
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  background-color: #FAFAFC;
}
.myorder {
  width: 670rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.myorder navigator {
  width: 160rpx;
  height: 160rpx;
}
.myorder .uc_title {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
}
.myorder_title{
  width: 50%;
  padding-left: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.all_order{
  width: 50%;
  padding-right: 20rpx;
  font-size:26rpx;
  text-align: right;
  color:rgba(153,153,153,1);
  position: relative;
}
.myorder .uc_title .gengduo{
  width: 12rpx;
  height: 24rpx;
  position: absolute;
  left: 322rpx;
  top: 34rpx;
}
.myorder .uc_sorts {
  width: 100%;
  height: 176rpx;
  display: flex;
  flex-wrap: wrap;
}
.myorder .uc_sort {
  width: 25%;
  height: 149rpx;
  text-align: center;
  position: relative;
}
.myorder .uc_sort image {
  position: absolute;
  top: 36rpx;
  left: 74rpx;
}
.myorder .uc_sort view {
  width: 100%;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  position: absolute;
  top: 87rpx;
}
.myothers{
  width: 670rpx;
  height: auto;
  padding: 20rpx;
  background-color: #ffffff;
  display: flex;
  flex-wrap: wrap;
}
.myother{
  width: 25%;
  height: 160rpx;
  line-height: 100%;
  position: relative;
  font-size: 26rpx;
}

.myother .myother_img{
  position: absolute;
  left: 64rpx;
  top: 36rpx;
}
.myother .myother_txt{
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  top:110rpx;
}





