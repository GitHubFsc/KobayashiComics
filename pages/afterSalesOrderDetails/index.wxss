}
.dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
}

.dialog .dialog_box {
  width: 510rpx;
  height: 480rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 352rpx;
  left: 120rpx;
  z-index: 1;
  background-color: rgba(255, 255, 255, 1);
  padding: 45rpx 65rpx;
}

.dialog .cancel image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 22rpx;
  left: 460rpx;
}

.dialog .title {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.dialog .CourierCompany {
  width: 380rpx;
  height: 72rpx;
  font-size: 26rpx;
  color: #666666;
  border: 1rpx solid #979797;
  line-height: 72rpx;
  padding-left: 14rpx;
}

.dialog .CourierCompany image {
  width: 24rpx;
  height: 16rpx;
  position: absolute;
  top: 176rpx;
  left: 400rpx;
}

.dialog .SingleNumber {
  width: 380rpx;
  height: 72rpx;
  border: 1rpx solid #979797;
  margin-bottom: 40rpx;
  margin-top: 30rpx;
  padding-left: 14rpx;
}

.dialog .SingleNumber input {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  color: #666666;
}

.dialog .submit {
  width: 380rpx;
  height: 72rpx;
  margin: 0 auto;
  background-color: #ea1854;
  text-align: center;
  line-height: 72rpx;
  font-size: 32rpx;
  color: #fff;
}

.dialog .select_box {
  width: 380rpx;
  height: auto;
  font-size: 26rpx;
  padding-left: 14rpx;
  color: #666666;
  line-height: 60rpx;
  background-color: rgba(255, 255, 255, 1);
  border: 1rpx solid #979797;
  position: absolute;
  top: 568rpx;
  left: 184rpx;
  z-index: 2;
}