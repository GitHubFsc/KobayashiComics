<!--pages/orderDetails/index.wxml-->
<view class="main">
	<view class="refund">
		<view class="refund_left">
			<image src="../icon/refund{{order_no}}.png"></image>
		</view>
		<view class="refund_right" wx:if="{{order_no == 1}}">
			<view class="refund_right_top">退款中</view>
			<view class="refund_right_bom">如果退回请告知客服退回单号</view>
		</view>
		<view class="refund_right" wx:elif="{{order_no == 2}}">
			<view class="refund_right_ok">退款成功</view>
		</view>
		<view class="refund_right" wx:elif="{{order_no == 3}}">
			<view class="refund_right_top">退款失败</view>
			<view class="refund_right_bom">失败原因：货物还未退回</view>
		</view>
	</view>
	<view class="reason">
		<view class="reason_tex">售后编号：89898988</view>
		<view class="reason_tex" wx:if="{{orderDetails.refund_status == 3||orderDetails.refund_status == 2}}">2019-12-12 12:00</view>
		<view class="reason_tex" wx:if="{{orderDetails.refund_status == 3}}">退款失败原因：货物还未退回</view>
		<view class="reason_tex" wx:if="{{orderDetails.refund_status == 3}}">退款金额：¥1000</view>
		<view class="reason_tex">申请时间：2019-12-12 12:00</view>
		<view class="reason_tex">申请金额：¥200</view>
		<view class="reason_tex">申请类型：仅退款 退货退款</view>
		<view class="reason_tex">申请原因：仅退款 退货退款</view>
		<view class="reason_tex">退款说明：仅退款 退货退款</view>
		<view class="reason_img" >
			<image wx:for="{{3}}" src="./../images/mall1.png" mode='aspectFill'  wx:key="*this"></image>
		</view>
	</view>
	<view class="position">
		<view class="position_left">
			<image src="../icon/dingwei.png"></image>
		</view>
		<view class="position_right">
			<view>张三 18888888888</view>
			<view>上海市长宁区延安西路1088号1903</view>
		</view>
	</view>
	<view class="commoditys">
		<view class="commodity" wx:for="{{2}}" wx:key="*this">
			<view class="commodity_left">
				<image src="./../images/mall1.png"></image>
			</view>
			<view class="commodity_right">
				<view class="commodity_title">经典马克杯</view>
				<view class="commodity_property">白色</view>
				<view class="commodity_money">
					<text>¥200</text>
					<text class="commodity_num">x1</text>
				</view>
			</view>
		</view>
	</view>
	<view class="amount">
		<view>
			<text>商品总额</text>
			<text>¥200</text>
		</view>
		<view>
			<text>运费</text>
			<text>¥20</text>
		</view>
		<view>
			<text>积分</text>
			<text class="jifen">-20</text>
		</view>
		<view>
			<text>优惠券</text>
			<text>-20</text>
		</view>
		<view>
			<text>发票</text>
			<text>{{orderDetails.point_youhui?"不要发票":orderDetails.point_youhui==0?"个人发票":"公司发票"}}</text>
		</view>
		<view>
			<text>实际需支付金额  </text>
			<text class="jine">  ¥20</text>
		</view>
	</view>
	<view class="order">
		<view class="reason_tex">订单编号：89898988</view>
		<view class="reason_tex">下单时间：2019-12-12 12:00</view>
		<view class="reason_tex">付款时间: 2019-12-12 12:00</view>
		<view class="reason_tex">付款方式：微信</view>
		<view class="reason_tex">发货时间：2019-12-12 12:00</view>
	</view>
	
	<view class="refund_btn">
		<view class="Quantity">共2件商品</view>
		<view class="Amount">¥200</view>
		<view class="SingleNumber" catchtap="SingleNumber" wx:if="{{orderDetails.refund_status == 1}}">填写寄回单号</view>
		<view class="btnz" catchtap="CancelRefund"  wx:if="{{orderDetails.refund_status == 1}}">取消退款</view>
		<view class="btnz" catchtap="applyAgain"  wx:if="{{orderDetails.refund_status == 3}}">再次申请</view>
	</view>
	<view class="dialog" wx:if="{{dialog_box}}">
		<view class="dialog_box">
			<view class="cancel" catchtap="cancel">
				<image src="../img/guanbi.png"></image>
			</view>
			<view class="title">请填写寄回快递单号</view>
			<view class="CourierCompany" catchtap="CourierCompany">{{CourierCompany}}<image src="../img/downB.png"></image>
			</view>
			<view class="SingleNumber"><input type="text" placeholder="请填写快递单号" value="{{express_no}}" bindblur="bindKeyInput"/></view>
			<view class="submit" catchtap="submit">提交</view>
		</view>
		<view class="select_box" wx:if="{{select_box}}">
			<view catchtap="select_box" data-txt="{{item.name}}" data-id="{{item.id}}" wx:for="{{CourierCompanys}}">{{item.name}}</view>
		</view>
	</view>
</view>