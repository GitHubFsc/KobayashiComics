/* pages/appraise/index.wxss */
.container{
  width: 100%;
  height: 100%;
}

.user {
  width: 710rpx;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-top: 18rpx;
  margin-right: 20rpx;
}

.user_name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 17rpx;
}

.user_time {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.star_count {
  margin-top: 32rpx;
  margin-left: 200rpx;
  display: flex;
  flex: 1;
  justify-content: flex-end;
}

.star_count .star {
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx;
}

.comment_bot {
  width: 640rpx;
  height: auto;
  padding: 20rpx 0;
  margin-left: 94rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.comment_txt {
  width: 640rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.comment_imgs {
  width: 640rpx;
  height: auto;
  padding: 10rpx 0;
  display: flex;
}

.comment_img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}