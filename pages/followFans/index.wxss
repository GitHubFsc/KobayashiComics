/* pages/followFans/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.user_list {
  width: 710rpx;
  height: auto;
  padding: 0 20rpx;
}

.user {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.user_img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  margin-top: 31rpx;
}

.user_name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.followFans {
  width: 140rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 32rpx;
  border: 1rpx solid rgba(153, 153, 153, 1);
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  line-height: 64rpx;
  margin: 38rpx 0 0 0;
  position: absolute;
  right: 20rpx;
}

.UnfollowFans {
  width: 140rpx;
  height: 64rpx;
  background: rgba(203, 1, 1, 1);
  border-radius: 32rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 64rpx;
  margin: 38rpx 0 0 0;
  position: absolute;
  right: 20rpx;
}