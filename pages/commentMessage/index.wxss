/* pages/commentMessage/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background-color:rgba(250,250,252,1);
  border-top: 1rpx solid #e5e5e5;
}
.comment_box{
  width: 670rpx;
  height: 190rpx;
  padding: 20rpx;
  margin:  0 auto;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-bottom: 20rpx;
}
.cb_time{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#999999;
}
.cb_title{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333333;
  margin-top: 10rpx;
  padding-bottom: 13rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.cb_title text{
  color: #1067E0;
}
.cb_bot{
  width: 100%;
  height: 72rpx;
  padding: 20rpx 0;
  display: flex;
}
.cb_bot_img{
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
}
.cb_txt{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 72rpx;
}