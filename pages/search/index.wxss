/* pages/search/index.wxss */
.hr {
  border-top: 1rpx solid rgba(229, 229, 229, 1);
}

.search_input {
  width: 710rpx;
  height: 72rpx;
  padding: 20rpx 0;
  margin: 0 auto;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
  line-height: 72rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.search_input input {
  width: 594rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 44rpx;
  border: 1px solid rgba(229, 229, 229, 1);
  margin-right: 20rpx;
  padding-left: 36rpx;
}

.Recent,
.Popular {
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  position: relative;
}

.search_title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.search_boxs {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.search_box {
  width: auto;
  height: auto;
  padding: 8rpx 18rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  border-radius: 28rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.del {
  width: 34rpx;
  height: 36rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.mark {
  background: rgba(203, 1, 1, 1);
  color: rgba(255, 255, 255, 1);
  border: none;
}
/*商品*/
.recommend_bot {
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.fruit_play{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 149rpx;
  left: 129rpx;
}
