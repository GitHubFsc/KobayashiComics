/* pages/homepage/index.wxss */
.container {
  width: 100%;
  height: auto;
}

.user {
  width: 710rpx;
  height: 226rpx;
  padding: 46rpx 20rpx 30rpx;
}

.user_top {
  width: 100%;
  height: auto;
  display: flex;
}

.user_avatar {
  width: 120rpx;
  height: 120rpx;
}
.user_right{
  width: auto;
  height: auto;
  line-height: 60rpx;
  margin-left: 24rpx;
}
.user_name {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.user_signature {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.user_bot {
  width: 100%;
  height: auto;
  display: flex;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.user_attention ,.user_fan{
  margin-top: 51rpx;
}
.user_attention text,.user_fan text{
  margin-left: 35rpx;
}
.user_fan {
  margin-left: 152rpx;
  margin-right: 118rpx;
}
.user_btn {
  margin-top: 43rpx;
  padding: 0 30rpx;
  height:56rpx;
  text-align: center;
  line-height: 56rpx;
  background:rgba(255,255,255,1);
  border-radius:32px;
  border:1px solid rgba(203,1,1,1);
  font-size:28rpx;
  font-weight:400;
  color:rgba(203,1,1,1);
}
.myinformation {
  width: 100%;
  height: 72rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  font-family: PingFang SC;
  font-weight: 500;
}

.myinformation::before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 24rpx;
  background:rgba(203,1,1,1);
  margin-right: 14rpx;
  margin-left: 20rpx;
}

.mallList{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  background-color: #FAFAFC;
  padding: 0 0 20rpx 0;
}
.tree_detail{
  margin: 0;
}
.nav_tabs{
  width: 100%;
  height: 92rpx;
  line-height: 80rpx;
}
.nav_tabs .nav_tab,.nav_tabs .active{
  height: 92rpx;
}
.nav_tabs .nav_tab .nav_tabs_hr{
  margin-top: 2rpx;
}
.advisory{
  position: relative;
}
.fruit_del{
  position: absolute;
  right: 0 ;
  top: 0;
  width:44rpx;
  height:44rpx;
}
.fruit_play{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 149rpx;
  left: 129rpx;
}
.comment{
  width: 670rpx;
  height: auto;
  padding: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.comment_top{
  width: 100%;
  line-height: 46rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.comment_top .ct_time{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.comment_top .ct_txt{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.comment_top .ct_txt text{
  color:#1067E0;
}
.comment_bot{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
}
.cb_img{
  width:72rpx;
  height:72rpx;
  margin-right: 20rpx;
}
.cb_txt{
  height: 90rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 60rpx;
}
/*发布*/
.dynamic{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 10rpx;
  bottom: 20rpx;
}