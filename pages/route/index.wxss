/* pages/route/index.wxss */
.container {
  width: 100%;
  height: 100%;
  background:rgba(250,250,252,1);
}

.route_top {
  width: 710rpx;
  height: auto;
  padding: 0 20rpx;
  display: flex;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  border-top: 1rpx solid #e5e5e5;
  line-height: 96rpx;
}

.rt_img {
  width: 24rpx;
  height: 30rpx;
  margin-top: 3rpx;
}

.rt_city {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin: -3rpx 6rpx 0;
}

.route_boxs {
  width: auto;
  height: auto;
  padding: 20rpx;
  display: flex;
  overflow: scroll;
  margin-right: 10rpx;
}

.route_box {
  width: auto;
  height: auto;
  position: relative;
  margin-right: 20rpx;
}

.rb_img {
  width: 280rpx;
  height: 320rpx;
  border-radius: 10rpx;
}

.rb_txt {
  position: absolute;
  left: 0;
  bottom: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  z-index: 1;
}

.rl_top {
  width: 710rpx;
  height: auto;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 90rpx;
}

.rl_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.rl_right {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.rl_right text {
  margin: 0 4rpx 0 16rpx;
}

.rl_txt {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(203, 1, 1, 1);
}
