/**index.wxss**/
.top {
  width: 710rpx;
  height: 72rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 72rpx;
  position: relative;
}

.top image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 16rpx;
  position: absolute;
  top: 44rpx;
}

.search {
  width: 570rpx;
  height: 72rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 10rpx;
  line-height: 64rpx;
}

.search text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding-left: 74rpx;
}

/*导航*/
.navigates {
  width: 710rpx;
  height: 130rpx;
  padding: 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.navigates  .navigate {
  width: 25%;
  height: 100%;
  position: relative;
}

.navigates .navigate view {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 100rpx;
}
/*直播*/
.livebroadcast{
  width: 710rpx;
  height: 590rpx;
  padding: 22rpx 20rpx;
  position: relative;
}
.livebroadcast .live_top{
  width: 100%;
  height: 72rpx;
  font-size:30rpx;
  font-weight:550;
  color:rgba(51,51,51,1);
}
.livebroadcast .bgimg{
  width: 710rpx;
  height: 474rpx;
  position: absolute;
  top: 92rpx;
}
.livebroadcast .bgplay{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 285rpx;
  left: 331rpx;
  z-index: 2;
}
.livebroadcast .liveing{
  width: 290rpx;
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  position: absolute;
  top: 112rpx;
  left: 42rpx;
  z-index: 2;
}
.livebroadcast .liveing view:nth-child(1){
  width:120rpx;
  height:56rpx;
  background:rgba(203,0,0,1);
  border-radius:30rpx 0rpx 0rpx 30rpx;
  text-align: center;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.livebroadcast .liveing view:nth-child(2){
  width:170rpx;
  height:56rpx;
  background:rgba(255,174,52,1);
  border-radius:0px 30px 30px 0px;
  text-align: center;
  font-size:22rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.livebroadcast .title{
  position: absolute;
  top: 509rpx;
  left: 42rpx;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  z-index: 2;
}
/*发布*/
.dynamic{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 10rpx;
  bottom: 20rpx;
}