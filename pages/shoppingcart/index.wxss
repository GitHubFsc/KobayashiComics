/* pages/shoppingcart/index.wxss */
.container {
  width: 100%;
  height: 100%;
  border-top: 1rpx solid #e5e5e5;
}

.carempty {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 124rpx;
  margin-bottom: 40rpx;
}

.carempty_txt {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.car_top {
  width: 710rpx;
  height: 80rpx;
  text-align: right;
  padding: 0 20rpx;
  line-height: 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 4rpx 0px rgba(211, 211, 211, 0.5);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.carList {
  width: 710rpx;
  height: 1033rpx;
  overflow: scroll;
  background: rgba(250, 250, 252, 1);
  padding: 20rpx;
}
.carLists{
  width: 670rpx;
  height: auto;
  padding: 0 20rpx;
  background: rgba(255, 255, 255, 1);
}
.car {
  width: 100%rpx;
  height: 180rpx;
  margin: 0 auto;
  padding: 20rpx 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px 10px 0px 0px;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}
.car:last-child {
  border-bottom: none;
}

.select {
  width: 36rpx;
  height: 36rpx;
  margin-top: 62rpx;
  margin-left: 20rpx;
}

.car_img {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
}

.car_txt {
  width: auto;
  line-height: 56rpx;
}

.car_txt view:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.car_txt view:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.car_txt view:nth-child(3) {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(203, 1, 1, 1);
}

.carplusLess {
  width: 168rpx;
  height: 44rpx;
  border: 1rpx solid #C6C6C6;
  line-height: 44rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 4rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
}
.carplusLess view:nth-child(odd){
  width: 42rpx;
  text-align: center;
}
.carplusLess view:nth-child(2){
  width: 80rpx;
  border: 1rpx solid #C6C6C6;
  border-top: none;
  border-bottom: none;
  text-align: center;
}
.car_bot{
  width:750rpx;
  height:98rpx;
  background:rgba(255,255,255,1);
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}
.cb_left{
  width: 200rpx;
  height: 100%;
  display: flex;
  line-height: 98rpx;
}
.cb_left .carbot_select{
  width: 36rpx;
  height: 36rpx;
  margin: 10rpx 20rpx 0 20rpx;
}
.car_hj{
  display: flex;
  line-height: 98rpx;
  margin-left: 110rpx;
}
.delete{
  width:200rpx;
  height:98rpx;
  background:rgba(203,1,1,1);
  text-align: center;
  line-height: 98rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  position: absolute;
  right: 0;
  top: 0;
}