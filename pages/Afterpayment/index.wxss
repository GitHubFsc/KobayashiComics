/* pages/Afterpayment/index.wxss */
.container{
  width: 100%;
  height: 100%;
}
.ap_img{
  width: 80rpx;
  height: 86rpx;
  margin:  0 auto;
  margin-top: 145rpx;
  margin-bottom: 36rpx;
}
.apok_img{
  width: 64rpx;
  height: 64rpx;
  margin:  0 auto;
  margin-top: 145rpx;
  margin-bottom: 36rpx;
}
.ap_txt{
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: center;
  line-height: 60rpx;
}
.tohome{
  width:280rpx;
  height:88rpx;
  margin:  0 auto;
  background:rgba(203,1,1,1);
  border-radius:44rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 88rpx;
  margin-top: 70rpx;
}
.recommend_tilte{
  width: 100%;
  height: auto;
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:80rpx;
}
.recommend{
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  background:rgba(250,250,252,1);
  margin-top: 60rpx;
}
.recommend_bot{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.fruit {
  width: 345rpx;
  height: auto;
  margin-top: 20rpx;
  margin-left: 0;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 4rpx 0px rgba(218,218,218,0.3);
  border-radius:0px 0px 10rpx 10rpx;
}
.fruit:nth-child(even){
  margin-left: 20rpx;
}
.fruit .fruit_bottom {
  width: 305rpx;
  height: 40rpx;
  padding: 15rpx 20rpx;
  display: flex;
  justify-content: flex-start;
}

.price_now {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(203, 1, 1, 1);
}

.price_bef {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-decoration:line-through;
  margin-top: 4rpx;
  margin-left: 20rpx;
}
