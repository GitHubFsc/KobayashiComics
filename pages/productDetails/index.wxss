/*轮播图*/
.swiper_banner {
  position: relative;
}

.swiper_banner swiper {
  width: 100%;
  height: 770rpx;
  position: relative;
}

.swiper_banner swiper .swiper_image image {
  width: 750rpx;
  height: 750rpx;
}

/* 设置点点的层级 */

.swiper_banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  top: 760rpx;
  z-index: 2;
}

/* 设置点点的样式 */

.swiper_banner swiper .wx-swiper-dot {
  width: 16rpx;
  height: 6rpx;
  border-radius: 0;
  display: inline-flex;
  margin-left: 4rpx;
  /* justify-content: space-between; */
}

.swiper_banner swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background-color: #C0C0C0;
  opacity: 0.5;
}

/* 当前点点的样式 */
.swiper_banner swiper .wx-swiper-dot-active::before {
  background-color: #CB0101;
  opacity: 0.9;
  border-radius: 0;
}

.swiper_banner swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 16rpx;
}

