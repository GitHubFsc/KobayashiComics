<!--pages/productDetails/index.wxml-->
<view class="container">
	<!-- 轮播导航+分享 -->
	<view class="swiper_banner">
		<swiper indicator-dots="true" autoplay="true" bindchange="swiperChange">
			<block wx:for="{{4}}" wx:key="*this">
				<swiper-item>
					<view class="swiper_image">
						<image src="./../images/referral.png"></image>
					</view>
				</swiper-item>
			</block>
		</swiper>
		<view class="share" data-id="1" catchtap="router_dynamic">
			<image src="./../icon/shareBig.png" />
		</view>
		<view class="imageCount">{{current+1}}/4</view>
	</view>
	<!-- 商品描述 + 选择规格 -->
	<view class="standard">
		<view class="standard_title">经典马克杯</view>
		<view class="standard_num">¥200</view>
		<view class="standard_select">
			<view class="ss_left">选择规格</view>
			<view class="ss_right" catchtap="popUpLayer">
				<view>白色</view>
				<view class="gengduo" catchtap="">
					<image src="./../icon/gengduo.png"></image>
				</view>
			</view>
		</view>
	</view>
	<view class="hr"></view>
	<!-- 商品评论 -->
	<view class="comment">
		<view class="comment_title">商品评价</view>
		<block wx:for="{{2}}" wx:key="*this">
			<view class="assess">
				<view class="user">
					<view class="avatar" data-id="2" data-type="1" catchtap="router_homepage">
						<image src="./../images/userimg.png"></image>
					</view>
					<view class="synopsis" data-id="2" data-type="1" catchtap="router_homepage">
						<view class="user_name">熙和</view>
						<view class="user_time">2020-12-12</view>
					</view>
					<view class="star_count">
						<block wx:for="{{5}}" wx:key="index">
							<view class="star">
								<image src="./../icon/star.png" />
							</view>
						</block>
					</view>
				</view>
				<view class="comment_bot">
					<view class="comment_txt">商品很好，很有个性，第一次来小林家买东西，很是惊喜</view>
					<view class="comment_imgs">
						<block wx:for="{{3}}" wx:key="index">
							<view class="comment_img">
								<image src="./../images/mall1.png" />
							</view>
						</block>
					</view>
				</view>
			</view>
		</block>
		<view class="more" catchtap="router_appraise">
			<view class="more_txt">更多评价</view>
			<view class="more_img">
				<image src="./../icon/comment_more.png" />
			</view>
		</view>
	</view>
	<view class="hr"></view>
	<!-- 图文详情 -->
	<view class="details">
		<view class="details_tltle">图文详情</view>
		<view class="details_txt">品牌：<text>SSDF</text></view>
		<view class="details_txt">高度：<text>12cm</text></view>
		<view class="details_txt">材质：<text>陶瓷</text></view>
		<view class="details_txt">颜色：<text>白色，蓝色</text></view>
		<view class="details_txt">安全指数：<text>一级</text></view>
	</view>
	<!-- 客服+收藏+购物车+立即购买 -->
	<view class="Details_btn">
		<view class="db_img" data-id="1" catchtap="router_service">
			<image src="./../icon/service.png" />
		</view>
		<view class="db_img" data-id="1" catchtap="collectL">
			<image src="{{collectLflag?'./../icon/collectH.png':'./../icon/collectL.png'}}" />
		</view>
		<view class="db_img" catchtap="router_shoppingcart">
			<image src="./../icon/carB.png" />
		</view>
		<view class="buy" data-type="false" catchtap="popUpLayer">立即购买</view>
		<view class="addcar" catchtap="popUpLayer">加入购物车</view>
	</view>
	<!-- 规格抽屉 -->
	<view class="popUpLayer" hidden="{{popUpLayerflag}}" catchtap="popUpLayer">
		<view class="content">
			<view class="pul_top">
				<view class="pul_img"><image src="./../images/mall1.png"/></view>
				<view class="pul_right">
					<view class="pul_price">价格：¥300</view>
					<view class="pul_txt">选择规格</view>
				</view>
			</view>
			<view>
				<view class="pul_txt">选择颜色</view>
				<view class="pul_btns">
					<block wx:for="{{2}}" wx:key="index">
						<view class="pul_btn {{index==colorIdx?'select':''}}" data-index="{{index}}" catchtap="color">蓝色</view>
					</block>
				</view>
			</view>
			<view>
				<view class="pul_txt">选择尺寸</view>
				<view class="pul_btns">
					<block wx:for="{{3}}" wx:key="index">
						<view class="pul_btn {{index==sizeIdx?'select':''}}" data-index="{{index}}" catchtap="size">L码</view>
					</block>
				</view>
			</view>
			<view>
				<view class="pul_txt">数量</view>
				<view class="pul_plus_Less">
					<view class="pul_Less" data-index="1" catchtap="Update_num">-</view>
					<view class="pul_num">{{num}}</view>
					<view class="pul_plus" data-index="2" catchtap="Update_num">+</view>
				</view>
			</view>
			<view class="pul_confirm" data-id="1" catchtap="confirm">{{pul_confirm?'确认加入':'确认购买'}}</view>
		</view>
	</view>
</view>