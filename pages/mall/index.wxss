/* pages/mall/index.wxss */
.container {
  width: auto;
  height: auto;
}

.top {
  width: 710rpx;
  height: 72rpx;
  margin: 20rpx;
  display: flex;
}

.search {
  width: 620rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 4rpx 0px rgba(238, 238, 238, 0.5);
  border-radius: 10rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  line-height: 65rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 16rpx;
  position: absolute;
  top: 44rpx;
}

.search text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding-left: 74rpx;
}

.top_right {
  width: 44rpx;
  height: 42rpx;
  margin: 15rpx 0 0 28rpx;
  position: relative;
}

.top_right text {
  display: inline-block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(189, 51, 51, 1);
  text-align: center;
  top: -14rpx;
  left: 26rpx;
}

/*导航*/
.navigates {
  width: 710rpx;
  height: 130rpx;
  padding: 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.navigates .navigate {
  width: 25%;
  height: 100%;
  position: relative;
}

.navigates .navigate view {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 100rpx;
}

.activity {
  width: 710rpx;
  height: auto;
  padding: 0 20rpx 20rpx;
}

.activity_top {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  justify-content: space-between;
}

.activity_left {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
}

.activity_img {
  width: 44rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.activity_right {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
}

.genduo {
  width: 14rpx;
  height: 26rpx;
  margin-top: 2rpx;
  margin-left: 10rpx;
}

.activity_bot {
  width: 100%;
  height: 100%;
  display: flex;
}

.activity_mall {
  width: 25%;
  height: 100%;
  margin-right: 20rpx;
}

.am_img {
  width: 163rpx;
  height: 163rpx;
}

.am_title {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  margin: 9rpx 0;
}

.am_price {
  font-size: 28rpx;
  color: rgba(203, 1, 1, 1);
}

