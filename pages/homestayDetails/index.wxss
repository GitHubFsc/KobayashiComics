/* pages/homestayDetails/index.wxss */
.address {
  height: 56rpx;
  padding: 0 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 29rpx;
  text-align: center;
  line-height: 56rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
  display: flex;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.address .down {
  width: 24rpx;
  height: 14rpx;
  margin: -3rpx 0 0 12rpx;
}

/* 轮播导航 */
.swiper_banner swiper {
  width: 100%;
  height: 488rpx;
  position: relative;
}

.swiper_banner swiper .swiper_image image {
  display: inline-block;
  width: 100%;
  height: 488rpx;
}

/* 设置点点的层级 */

.swiper_banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  top: 472rpx;
  z-index: 2;
}

.hd_title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  padding: 6rpx 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 70rpx;
}

.hd_price {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(203, 1, 1, 1);
}

.hd_bot {
  width: 670;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 70rpx;
}

.hd_boxs {
  width: auto;
  height: auto;
  padding: 20rpx;
  display: flex;
  overflow: scroll;
  margin-right: 20rpx;
}

.hd_box {
  padding: 20rpx;
  margin-right: 20rpx;
  line-height: 40rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  border: 1px solid rgba(153, 153, 153, 1);
}

.hd_box view {
  width: 240rpx;
}

.select {
  color: rgba(203, 1, 1, 1);
  border: 1rpx solid rgba(203, 1, 1, 1);
}

.hd_date {
  width: 710rpx;
  height: 150rpx;
  padding: 0 20rpx;
  display: flex;
  position: relative;
}

.hd_CheckIn,
.hd_CheckOut {
  width: 285rpx;
  height: 100%;
}

.hd_CheckIn::after {
  position: absolute;
  top: 45rpx;
  left: 285rpx;
  content: "";
  display: inline-block;
  width: 1rpx;
  height: 60rpx;
  background: rgba(229, 229, 229, 1);
}

.section_title {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 24rpx;
}

.picker {
  height: 86rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.hd_date_count {
  height: 100%;
  line-height: 150rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.hd_address {
  width: 710rpx;
  height: 40rpx;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.hd_description {
  width: 100%;
  height: auto;
  margin-bottom: 100rpx;
}

.hd_book {
  width: 750rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: rgba(203, 1, 1, 1);
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  position: fixed;
  left: 0;
  bottom: 0;
}

.calendar_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.calendar_box .calendars {
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: rgb(255, 255, 255);
}

.calendar_box .calendars .calendar_top {
  width: 100%;
  height: auto;
  padding:  16rpx 0;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.calendar_box .calendars .calendar_top .close {
  width: 36rpx;
  height: 36rpx;
}

.calendar_box .calendars .calendar_txt {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}
.calendar_box .calendars .calendar_nav{
  width: 100%;
  height: auto;
  padding: 16rpx 0;
  display: flex;
  justify-content: space-around;
}
.calendar_box .calendars .calendar {
  width: 100%;
  height: auto;
}
.calendar-title{
  text-align: center;
}
.calendar swiper {
  width: 100%;
  height: 600rpx;
}


