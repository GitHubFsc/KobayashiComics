/* pages/routeDetalis/index.wxss */
.address{
  height:56rpx;
  padding:  0 20rpx;
  background:rgba(0,0,0,0.5);
  border-radius:29rpx;
  text-align: center;
  line-height: 56rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
  display: flex;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.address .down{
  width: 24rpx;
  height: 14rpx;
  margin: -3rpx 0 0 12rpx;
}
/* 轮播导航 */
.swiper_banner {
  width: 100%;
  height: 750rpx;
  position: relative;
}
.swiper_banner swiper {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.swiper_banner swiper .swiper_image image {
  display: inline-block;
  width: 100%;
  height: 750rpx;
}
.imageCount {
  width: 100rpx;
  height: 52rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.route_txt{
  padding-left: 20rpx;
  line-height: 54rpx;
  padding-top: 20rpx;
}
.route_txt view:nth-child(1){
  font-size:30rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.route_txt view:nth-child(2),.route_txt view:nth-child(3){
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.route_txt view:nth-child(4){
  font-size:28rpx;
  font-weight:500;
  color:rgba(203,1,1,1);
}
.Introduction{
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  margin-bottom: 100rpx;
}
.Introduction .tille{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  padding-left: 20rpx;
}
.destine{
  width: 750rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: rgba(203, 1, 1, 1);
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  position: fixed;
  left: 0;
  bottom: 0;
}