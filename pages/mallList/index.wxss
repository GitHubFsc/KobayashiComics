/* pages/mallList/index.wxss */
.recommend{
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  background:rgba(250,250,252,1);
}
.recommend_bot{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.fruit {
  width: 345rpx;
  height: auto;
  margin-top: 20rpx;
  margin-left: 0;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 4rpx 0px rgba(218,218,218,0.3);
  border-radius:0px 0px 10rpx 10rpx;
}
.fruit:nth-child(even){
  margin-left: 20rpx;
}
.fruit .fruit_bottom {
  width: 305rpx;
  height: 40rpx;
  padding: 15rpx 20rpx;
  display: flex;
  justify-content: flex-start;
}

.price_now {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(203, 1, 1, 1);
}

.price_bef {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-decoration:line-through;
  margin-top: 4rpx;
  margin-left: 20rpx;
}