<!--pages/mallList/index.wxml-->
<view class="container">
	<view class="nav_tabs">
		<block wx:for="{{3}}" wx:key="*this">
			<view class="nav_tab {{index==currentTab?'active':''}}" data-index="{{index}}" catchtap="nav_tab">
      {{item==0?'综合':item==1?'销量':item==2?'价格':''}}
			</view>
		</block>
	</view>
	<view class="recommend">
		<view class="recommend_bot">
			<block wx:for="{{8}}" wx:key="index">
				<view class="fruit">
					<view class="fruit_img">
						<image src="./../images/recommend_mall.png"></image>
					</view>
					<view class="fruit_txt">强烈安利这款马克杯，好看拿着也舒服</view>
					<view class="fruit_bottom">
						<view class="price_now">¥200</view>
						<view class="price_bef">¥300</view>
					</view>
				</view>
			</block>
		</view>
	</view>
</view>