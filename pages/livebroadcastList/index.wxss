/* pages/livebroadcastList/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.banner {
  width: 750rpx;
  height: 375rpx;
}

.livebroadcastList {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.livebroadcast_box {
  width: 345rpx;
  height: 370rpx;
  margin: 20rpx 0 20rpx 20rpx;
  position: relative;
}


.livebroadcast_box .liveing {
  width: 290rpx;
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 2;
}

.livebroadcast_box .liveing view:nth-child(1) {
  width: 100rpx;
  height: 56rpx;
  background: rgba(203, 0, 0, 1);
  border-radius: 30rpx 0rpx 0rpx 30rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.livebroadcast_box .liveing view:nth-child(2) {
  width: 130rpx;
  height: 56rpx;
  background:rgba(0,0,0,0.4);
  border-radius: 0px 30px 30px 0px;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.lb_replay {
  width: 120rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 44rpx;
  position: absolute;
  top: 150rpx;
  left: 112rpx;
}

.lb_over {
  width: 120rpx;
  height: 56rpx;
  background: rgba(213, 213, 213, 1);
  border-radius: 10rpx 0px 10rpx 0px;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 56rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.lb_img {
  width: 345rpx;
  height: 345rpx;
}

.lb_name {
  margin-top: 14rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}