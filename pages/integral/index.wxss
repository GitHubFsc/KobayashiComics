/* pages/integral/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.top {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.bg_img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.integral_txt {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.integral_img {
  width: 56rpx;
  height: 56rpx;
  margin-top: 8rpx;
  margin-right: 10rpx;
}

.it_top {
  margin-top: 97rpx;
  margin-left: 270rpx;
  font-size: 56rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  display: flex;
}

.it_txt {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.integral_recording {
  width: 710rpx;
  height: auto;
  padding: 20rpx;
}

.ir_title {
  margin-top: 56rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 14rpx;
}

.it_boxs {
  width: 100%;
  height: auto;
}

.it_box {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
}

.box_left view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin: 20rpx 0 6rpx 0;
}

.box_left view:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.box_right {
  margin-top: 36rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 125, 0, 1);
}

.price {
  color: rgba(204, 8, 8, 1);
}