/* pages/city/index.wxss */
.container {
  
  width: 100%;
  height: 100%;
}
.city_top{
  width: 710rpx;
  height: 260rpx;
  padding: 20rpx;
  background:rgba(250,250,252,1);
}
.city_txt{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40px;
}
.city_address{
  width: 120rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  display: flex;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding: 0 20rpx;
  margin-bottom: 70rpx;
}
.city_dw{
  width: 24rpx;
  height: 30rpx;
  margin-top: 6rpx;
  margin-right: 10rpx;
}
.search-bar {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: -100rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: rgb(59, 63, 68);
  padding: 0 20rpx;
  position: relative;
}

.search-bar .clear {
  position: absolute;
  right: 30rpx;
  bottom: 25rpx;
  z-index: 2;
  height: 50rpx;
  width: 50rpx;
  opacity: 0.35;
}

.search-bar .split {
  padding: 0 30rpx;
  color: #555;
}

.search-bar .picker-opts {
  box-sizing: border-box;
  white-space: nowrap;
  font-size: 25rpx;
  color: #fff;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}

.search-bar input {
  font-size: 35rpx;
  color: #f5f5f5;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}

.search-bar .placeholder {
  font-size: 30rpx;
  color: #aaa;
}

.list-detail, .list-city {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: #fff;
}

.list-detail .item-nav {
  border-bottom: 1rpx solid #eee;
}

.list-detail .title, .history .title {
  font-size: 32rpx;
  color: #000;
  line-height: 45rpx;
}

.list-detail .address, .history .address {
  font-size: 28rpx;
  color: #aaa;
  white-space: normal;
}

/* 城市列表 */

.list-city {
  position: relative;
}

.py {
  box-sizing: border-box;
  background: #eee;
  font-size: 23rpx;
  color: #aaa;
  padding: 10rpx 25rpx;
}

.fullname {
  box-sizing: border-box;
  font-size: 30rpx;
  color: #555;
  padding: 25rpx;
  border-bottom: 1rpx solid #eee;
}

.city-py {
  position: fixed;
  top: 50%;
  right: 0;
  margin-top: -360rpx;
}

.city-py view {
  font-size: 25rpx;
  line-height: 30rpx;
  text-align: center;
  color: #555;
}

.showPy {
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border-radius: 15rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 80rpx;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 3;
  color: #333;
  box-shadow: 0 0 150rpx rgba(0, 0, 0, 0.35);
}

.hot-city {
  border: 1rpx solid #eee;
  display: inline-block;
  margin: 25rpx 0 0 25rpx;
  padding: 10rpx 25rpx;
  font-size: 25rpx;
}





.history-item-wrap:active, .item-nav:active {
  background: #eee;
}