/**app.wxss**/
/*image*/
image{
  max-width: 100%;
  max-height: 100%;
}
/*hr*/
.hr{
  width:750rpx;
  height:20rpx;
  background-color:rgba(250,250,252,1);
}
/*tab 栏*/
.tree_detail {
  width: 100%;
  height: auto;
  background-color: #FAFAFC;
  margin-top: 32rpx;
}

.nav_tabs {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
}

.nav_tabs .nav_tab {
  width: 25%;
  height: 135rpx;
  text-align: center;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.nav_tabs .active {
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(203,1,1,1);
}

.nav_tabs .nav_tabs_hr {
  margin: 0 auto;
  margin-top: 29rpx;
  width:40rpx;
  height:6rpx;
  background:rgba(203,1,1,1);
}
.tab_ctn_view {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
/*商品*/
.fruit{
  width: 345rpx;
  height: auto;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background-color: #ffffff;
}
.fruit .fruit_img{
  width: 345rpx;
  height: 345rpx;
}
.fruit .fruit_txt{
  width: 305rpx;
  height: auto;
  padding: 0 20rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  
}
.fruit .fruit_bottom{
  width: 305rpx;
  height: 40rpx;
  padding:15rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.fruit .fruit_bottom .fb_left{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.fruit .fruit_bottom .fb_left image,
.fruit .fruit_bottom .fb_right image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.fruit .fruit_bottom .fb_right{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

/*订单*/
.order {
  width: 710rpx;
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.order .title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.order .title .orderId {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.order .title .title-r {
  font-size: 28rpx;
  color: #999;
}
.shop_status{
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.mall {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.mall .mall_img {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.mall .mall_right {
  flex: 1;
}

.mall .mall_right .mall_name {
  font-size:30rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 15rpx;
}

.mall .mall_right .mall_txt {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.mall .mall_right .mall_price {
  font-size: 26rpx;
  color: #EA1854;
  display: flex;
  justify-content: space-between;
}

.mall .mall_right .mall_price text {
  color: #999;
  font-size: 26rpx;
}
.mall_bot {
  text-align: right;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.mall_bot text {
  font-size: 34rpx;
  color: #EA1854;
  margin-left: 26rpx;
}
.btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
}
.btn>view {
  display: flex;
}
.btn .btnz {
  line-height: 50rpx;
  border-radius: 25rpx;
  border: 1px solid #EA1854;
  padding: 0 20rpx;
  color: #EA1854;
  font-size: 28rpx;
  margin-left: 11rpx;
}